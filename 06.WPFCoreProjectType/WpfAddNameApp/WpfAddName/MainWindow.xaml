<Window x:Class="WpfAddName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAddName"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
	<StackPanel>
		<StackPanel>
			<Label 
				Margin="10"
				x:Name="EntryLabel" 
				Content="Data-Entry" 
				FontWeight="Bold"
				FontSize="30"/>
			
			<Label 
				Margin="10"
				Padding="5"
				x:Name="NameLabel" 
				Content="" 
				FontWeight="Light"
				FontSize="20"/>

			<TextBox
			Margin="10"	
			Padding="10"
				FontSize="20"
			x:Name="MainTextBox" 
			Width="200" 
			HorizontalAlignment="Left"/>
			
			<Button 
				Margin="10" 
				Padding="5"
				x:Name="NameInputbutton" 
				Content="Add Name" 
				Width="100" 
				HorizontalAlignment="Left"
				Click="NameInputbutton_Click"
			/>
		</StackPanel>
	</StackPanel>
</Window>
